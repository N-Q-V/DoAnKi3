@model CallApi.Models.Admin.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4 border border-0 rounded shadow-lg bg-white">
    <h1 class="text-center">Thêm mới sản phẩm</h1>
    <hr />
    <form asp-action="Create" method="post" asp-controller="Product" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ProductId" class="form-label font-weight-bold">Mã sản phẩm</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                    <input asp-for="ProductId" class="form-control" placeholder="Nhập mã sản phẩm" />
                </div>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="ProductName" class="form-label font-weight-bold">Tên sản phẩm</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                    <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm" />
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-6 mb-3 space-top">
                <label asp-for="CategoryId" class="form-label font-weight-bold">Tên Thương hiệu</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                    <select asp-for="CategoryId" asp-items="@ViewBag.CategoryId" class="form-control"></select>
                </div>
                
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Price" class="form-label font-weight-bold">Giá bán (VND)</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-dollar-sign"></i></div>
                    <input asp-for="Price" class="form-control" placeholder="Nhập giá bán" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 mb-3 space-top">
                <label asp-for="ProductType" class="form-label font-weight-bold">Loại sản phẩm</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                    <select asp-for="ProductType" class="form-control w" id="exampleFormControlSelect1">
                        <option value="true">Mới</option>
                        <option value="false">Cũ</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-6 mb-3 space-top">
                <label asp-for="Status" class="form-label font-weight-bold">Trình trạng</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                    <select asp-for="Status" class="form-control w" id="exampleFormControlSelect1">
                        <option value="true">Còn hàng</option>
                        <option value="false">Hết hàng</option>
                    </select>
                </div>
                
            </div>
        </div>

        <hr />

        <h3>Thêm ảnh và màu sản phẩm</h3>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="font-weight-bold">Ảnh chính</label>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="file">
                        <label class="custom-file-label" for="inputGroupFile01">Chọn ảnh</label>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label class="font-weight-bold">Ảnh phụ (Thêm nhiều ảnh)</label>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" multiple class="custom-file-input" name="fileImages">
                        <label class="custom-file-label" for="inputGroupFile01">Chọn ảnh</label>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="input-group -3">
                <label class="font-weight-bold">Màu sản phẩm</label>
                <div class="form-control w-100">
                    <div class="d-flex flex-wrap gap-3 align-items-center">
                        @foreach (var item in ViewBag.colors)
                        {
                            <div class="form-check mr-3">
                                <input class="form-check-input" type="checkbox" id="@item.ColorName" name="ProColorName" value="@item.ColorName">
                                <label class="form-check-label" for="id="@item.ColorName"">@item.ColorName</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <hr />

        <h3 >Thông số kỹ thuật</h3>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Display" class="form-label font-weight-bold">Màn hình</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                    <input asp-for="Display" class="form-control" placeholder="Nhập thông số màn hình" />
                </div>
                <span asp-validation-for="Display" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="System" class="form-label font-weight-bold">Hệ điều hành</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-cogs"></i></div>
                    <input asp-for="System" class="form-control" placeholder="Nhập tên hệ điều hành" />
                </div>
                <span asp-validation-for="System" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="RearCamera" class="form-label font-weight-bold">Camera sau</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-camera"></i></div>
                    <input asp-for="RearCamera" class="form-control" placeholder="Nhập thông số camera sau" />
                </div>
                <span asp-validation-for="RearCamera" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="FrontCamera" class="form-label font-weight-bold">Camera trước</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-camera"></i></div>
                    <input asp-for="FrontCamera" class="form-control" placeholder="Nhập thông số camera trước" />
                </div>
                <span asp-validation-for="FrontCamera" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Cpu" class="form-label font-weight-bold">CPU</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-hdd"></i></div>
                    <input asp-for="Cpu" class="form-control" placeholder="Nhập thông số CPU" />
                </div>
                <span asp-validation-for="Cpu" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Memory" class="form-label font-weight-bold">Bộ nhớ</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-sd-card"></i></div>
                    <input asp-for="Memory" class="form-control" placeholder="Nhập thông số bộ nhớ" />
                </div>
                <span asp-validation-for="Memory" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ConnectType" class="form-label font-weight-bold">Kết nối</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-wifi"></i></div>
                    <input asp-for="ConnectType" class="form-control" placeholder="Nhập loại kết nối" />
                </div>
                <span asp-validation-for="ConnectType" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="CreatAt" class="form-label font-weight-bold">Ngày ra mắt</label>
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                    <input asp-for="CreatAt" class="form-control" placeholder="Nhập ngày ra mắt" />
                </div>
                <span asp-validation-for="CreatAt" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Thêm mới</button>
            <a asp-action="Index" class="btn btn-secondary ms-auto"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
