@model CallApi.Models.Admin.ViewModel.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="mb-4">Sửa danh mục</h1>
        <hr />
        <form asp-action="Edit" method="post" asp-controller="Category" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryId" class="form-label font-weight-bold"></label>
                <input asp-for="CategoryId" readonly class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
                <input type="hidden" value="@Model.Image" name="ImageOld" />
                <input type="hidden" value="@Model.Logo" name="LogoOld" />
            </div>

            <div class="form-group">
                <label asp-for="CategoryName" class="form-label font-weight-bold"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input type="checkbox" asp-for="Status" class="form-check-input" id="Status" />
                <label class="form-check-label font-weight-bold" for="Status">
                    @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Image" class="form-label font-weight-bold"></label>
                        <input type="file" name="FileImage" class="form-control-file" />
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="mt-2">
                                <img src="@ViewBag.domain@Model.Image" alt="Category Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Logo" class="form-label font-weight-bold"></label>
                        <input type="file" name="FileLogo" class="form-control-file" />
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <div class="mt-2">
                                <img src="@ViewBag.domain@Model.Logo" alt="Category Logo" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CreatDate" class="form-label font-weight-bold"></label>
                <input asp-for="CreatDate" class="form-control" />
                <span asp-validation-for="CreatDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary ml-2"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
