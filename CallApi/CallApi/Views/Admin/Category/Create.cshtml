@model CallApi.Models.Admin.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Tạo danh mục mới</h1>

    <div class="card shadow-sm">
        <div class="card-header">
            <h4 class="card-title">Thông tin danh mục</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-controller="Category" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label font-weight-bold">Tên danh mục</label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Nhập tên danh mục" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Status" id="statusCheck" />
                    <label class="form-check-label font-weight-bold" for="statusCheck">
                        @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="FileImage" class="form-label font-weight-bold">Ảnh</label>
                    <input type="file" name="FileImage" class="form-control" />
                    <span asp-validation-for="FileImage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FileLogo" class="form-label font-weight-bold">Logo</label>
                    <input type="file" name="FileLogo" class="form-control" />
                    <span asp-validation-for="FileLogo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatDate" class="form-label font-weight-bold">Ngày tạo</label>
                    <input asp-for="CreatDate" class="form-control" placeholder="Chọn ngày tạo" />
                    <span asp-validation-for="CreatDate" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Tạo danh mục</button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-link">Quay lại danh sách</a>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
