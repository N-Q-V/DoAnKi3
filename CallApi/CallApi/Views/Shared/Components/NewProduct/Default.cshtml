@model IEnumerable<CallApi.Models.Admin.Product>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="box">
                <div class="box-head">
                    <h3 class="head-title">Sản phẩm mới nhất</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <a asp-action="Detail" asp-controller="UserProduct" asp-route-productId="@item.ProductId">
                                <!-- product -->
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="product-block">
                                        <div class="product-img">
                                            @foreach (var i in ViewBag.productImages)
                                            {
                                                if (item.ProductId == i.ProductId)
                                                {
                                                    <img src="@ViewBag.domain@i.Thumb" />
                                                }

                                            }
                                        </div>
                                        <div class="product-content">
                                            <h5><a href="#" class="product-title">@item.ProductName <strong>(@item.Memory)</strong></a></h5>
                                            <div class="product-meta">
                                                <a href="#" class="product-price">@item.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.product -->
                            </a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
