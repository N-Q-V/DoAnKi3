<!-- top-header-->
<div class="top-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-7 col-sm-6 hidden-xs">
                <p class="top-text">Hà Nội, @DateTime.Now</p>
            </div>
            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                <ul>
                    <li>Nhóm đồ án C2303LM</li>
                </ul>
            </div>
        </div>
        <!-- /.top-header-->
    </div>
</div>
<!-- header-section-->
<div class="header-wrapper">
    <div class="container">
        <div class="row">
            <!-- logo -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-8">
                <div class="logo">
                    <a href="index.html"><img src="User/images/logo.png" alt=""> </a>
                </div>
            </div>
            <!-- /.logo -->
            <!-- search -->
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="search-bg">
                    <form id="searchForm" action="#" method="GET">
                        <input type="text" id="searchInput" class="form-control" placeholder="Search Here">
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
            <!-- /.search -->
            <!-- account -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="account-section">
                    <ul>
                        @if (ViewBag.Username != null)
                        {
                            <li>
                                <a asp-action="Profile" asp-controller="RegisterAuth">
                                    @(ViewBag.Username?.Length > 5 ? ViewBag.Username.Substring(0, 5) + "..." : ViewBag.Username)
                                </a>
                            </li>
                            <li class="hidden-xs">|</li>
                            <li>
                                <a asp-action="Logout" asp-controller="LoginAuth" class="title hidden-xs" onclick="return confirm('Bạn chắc chắn muốn đăng xuất?');">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li><a asp-action="Login" asp-controller="LoginAuth">Đăng nhập</a></li>
                        }
                        <li>
                            <a asp-action="Index" asp-controller="Cart" class="title"><i class="fa fa-shopping-cart"></i>></a>
                        </li>
                    </ul>
                </div>
                <!-- /.account -->
            </div>
            <!-- search -->
        </div>
    </div>
    <!-- navigation -->
    <div class="navigation">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <!-- navigations-->
                    <div id="navigation">
                        <ul>
                            <li class="active">
                                <a asp-action="Index" asp-controller="User">Trang chủ</a>
                            </li>
                            <li>
                                <a asp-action="Index" asp-controller="UserProduct">Điện thoại</a>
                            </li>
                            <li>
                                <a asp-action="About" asp-controller="Home">Thông tin</a>
                            </li>
                            <li>
                                <a asp-action="Contact" asp-controller="Home">Liên hệ, hỗ trợ</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /.navigations-->
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('searchForm').addEventListener('submit', function (event) {
        event.preventDefault();
        var searchInput = document.getElementById('searchInput').value;
        var searchUrl = '/UserProduct?name=' + encodeURIComponent(searchInput)
        window.location.href = searchUrl;
    });
</script>
<!-- /. header-section-->